datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  firstname String
  roles     String @default("user")
  password  String
}

model Question {
  id            Int       @id @default(autoincrement())
  title         String
  description   String?   @db.LongText
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  matiereId     Int
  categoryId    Int
  isDeleted     Boolean   @default(false)
  isMultiChoice Boolean   @default(false)
  fileUrl       String?
  source        Int
  answers       Answer[]
  Matiere       Matiere   @relation(fields: [matiereId], references: [id])
  Source        Source    @relation(fields: [source], references: [id])
  Category      Category  @relation(fields: [categoryId], references: [id])
}

model Answer {
  id            Int       @id @default(autoincrement())
  question    Int
  title         String
  answerFileUrl String?
  description   String?   @db.LongText
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  isCorrect     Boolean   @default(false)
  isDeleted     Boolean   @default(false)
  Question      Question  @relation(fields: [question], references: [id])
}

model Matiere {
  id        Int        @id @default(autoincrement())
  title     String
  createdAt DateTime   @default(now())
  isDeleted Boolean    @default(false)
  questions Question[]
}

model Source {
  id        Int        @id @default(autoincrement())
  title     String
  createdAt DateTime   @default(now())
  isDeleted Boolean    @default(false)
  questions Question[]
}

model Category {
  id        Int        @id @default(autoincrement())
  title     String
  createdAt DateTime   @default(now())
  isDeleted Boolean    @default(false)
  questions Question[]
}
